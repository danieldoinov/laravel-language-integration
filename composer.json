{
    "name": "danieldoinov/languageintegration",
    "type": "library",
    "description": "The package introduces dynamic language change capability for a laravel instance.",
    "keywords": [
        "DanielDoinov",
        "LanguageIntegration",
        "Laravel",
        "multilingual",
        "language support"
    ],
    "homepage": "https://github.com/DanielDoinov/LanguageIntegration",
    "license": "MIT",
    "authors": [
        {
            "name": "Daniel Doinov",
            "email": "d.doinov@yahoo.com",
            "homepage": "https://github.com/danieldoinov",
            "role": "Developer"
        }
    ],
    "require": {
        "illuminate/support": "~5.1",
        "php" : "~7.0",
        "Stevebauman/Location" : "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit" : ">=5.4.3",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "DanielDoinov\\LanguageIntegration\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "DanielDoinov\\LanguageIntegration\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "config": {
        "sort-packages": true
    }
}
